          <div>
            <!-- <img src="/images/stripe.png" alt="" style="max-width:100%;margin-left:-20px;"> -->
          </div>
          <form action="/order" method="post" id="payment-form">
            <input type="hidden" name="product" value="<%= product.id %>">
            <div class="form-group">
              <label for="email">
                <%= _t('Email address') %>
              </label>
